<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@(string.IsNullOrEmpty(ViewBag.Title) ? "West Blue Golf League" : ViewBag.Title)</title>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700' rel='stylesheet' type='text/css'>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("head", required: false)
    @RenderSection("JavaScript", required: false)
</head>
<body ng-app="@ViewBag.ngApp">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
				<span class="header-link">@Html.RouteLink("West Blue Golf League", "Root", null, new { @class = "navbar-brand", data_toggle = "collapse", data_target = ".navbar-collapse.in" })</span>
				<span class="header-link-small">@Html.RouteLink("WBGL", "Root", null, new { @class = "navbar-brand", data_toggle = "collapse", data_target = ".navbar-collapse.in" })</span>
				<span class="header-link-up" ui-view="header.main">@Html.RouteLink("West Blue Golf League", "Root", null, new { @class = "navbar-brand", data_toggle = "collapse", data_target = ".navbar-collapse.in" })</span>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li ui-sref-active="active" ui-sref="playerList()">@Html.RouteLink("Players", "PlayerPage", new { catchall = "/" }, new { data_toggle = "collapse", data_target = ".navbar-collapse.in" })</li>
                    <li ui-sref-active="active" ui-sref="teamList()">@Html.RouteLink("Teams", "TeamPage", new { catchall = "/" }, new { data_toggle = "collapse", data_target = ".navbar-collapse.in" })</li>
					<li ui-sref-active="active" ui-sref="leaderboards.landingPage()">@Html.RouteLink("Leader Boards", "LeaderBoards", new { catchall = "/" }, new { data_toggle = "collapse", data_target = ".navbar-collapse.in" })</li>
                    <li>@Html.ActionLink("Handicaps", "Index", "ResultsTable", null, new { target = "_self", data_toggle = "collapse", data_target = ".navbar-collapse.in" })</li>
                </ul>
                @{Html.RenderAction("ToggleLogin", "Account");}
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
	    <footer>
		    <span>
                @Html.ActionLink("Rules & Information", "RulesAndInformation", "Information", null, new { target = "_self" })
            </span>
		    <span>
                @{Html.RenderAction("YearSelector", "Home");}
            </span>
			<div>&copy; @DateTime.Now.Year - West Blue Golf League</div>
	    </footer>
    </div>

    @Scripts.Render("~/bundles/lib")
    @Scripts.Render("~/bundles/app")
    @AngularHelpers.RenderTemplates("~/bundles/app/html")
    @RenderSection("scripts", required: false)

    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-60185057-2', 'auto');
      ga('send', 'pageview');
    </script>

</body>
</html>
